{
  "realm": "portal",
  "enabled": true,
  "displayName": "Portal",
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "internationalizationEnabled": true,
  "supportedLocales": ["en", "sl"],
  "defaultLocale": "en",

  "clients": [
    {
      "clientId": "portal-fe",
      "name": "Portal SPA",
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://localhost:4400/*"
      },
      "rootUrl": "http://localhost:4400",
      "redirectUris": ["http://localhost:4400/*"],
      "webOrigins": ["http://localhost:4400"],
      "protocolMappers": [
        {
          "name": "audience portal-be",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.custom.audience": "portal-be",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "portal-be",
      "name": "Portal Backend (confidential)",
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "redirectUris": [],
      "webOrigins": []
    },
    {
      "clientId": "portal-docs",
      "name": "Portal Docs (Cookie/OIDC for Scalar)",
      "protocol": "openid-connect",
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "G6hT3bXH8gVY9JZLkP5q",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "rootUrl": "https://localhost:7294",
      "redirectUris": [
        "https://localhost:7294/signin-oidc",
        "https://localhost:7294/signout-callback-oidc",
        "http://localhost:5100/signin-oidc",
        "http://localhost:5100/signout-callback-oidc"
      ],
      "webOrigins": [
        "https://localhost:7294",
        "http://localhost:5100"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "https://localhost:7294/*##http://localhost:5100/*"
      },
      "protocolMappers": [
        {
          "name": "realm roles -> roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "portal-scalar",
      "name": "Portal Scalar (OAuth2 for Try-It)",
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "https://localhost:7294/*##http://localhost:5100/*"
      },
      "rootUrl": "https://localhost:7294",
      "redirectUris": [
        "https://localhost:7294/scalar/*",
        "https://localhost:7294/*",
        "http://localhost:5100/scalar/*",
        "http://localhost:5100/*"
      ],
      "webOrigins": [
        "https://localhost:7294",
        "http://localhost:5100"
      ],
      "protocolMappers": [
        {
          "name": "audience portal-be",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.custom.audience": "portal-be",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],

  "roles": {
    "realm": [
      { "name": "user", "description": "Default app user" },
      { "name": "admin", "description": "Portal administrator" }
    ]
  },

  "users": [
    {
      "username": "portal.admin",
      "enabled": true,
      "emailVerified": true,
      "email": "portal.admin@example.com",
      "credentials": [
        { "type": "password", "value": "Passw0rd!", "temporary": true }
      ],
      "realmRoles": ["admin"]
    }
  ]
}
